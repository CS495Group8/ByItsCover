    <Button
        android:id="@+id/button_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/previous"
        app:layout_constraintBottom_toTopOf="@id/titleText"
        app:layout_constraintEnd_toEndOf="@id/cover"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.069" />

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Title"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/authorText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.82"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/cover" />

    <TextView
        android:id="@+id/authorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Author"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/averageRatingText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.846"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintVertical_bias="0.029" />

    <TextView
        android:id="@+id/averageRatingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Rating"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/cover"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.846"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/authorText" />

    <!-- Will be book cover -->
    <ImageView
        android:id="@+id/cover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@id/titleText"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_second"
        tools:src="@tools:sample/avatars"
        android:contentDescription="@string/CoverDes" />

    <Spinner
        android:id="@+id/review_order_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Sort"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/cover"
        app:layout_constraintTop_toBottomOf="@id/averageRatingText"
        />

    <ImageView
        android:id="@+id/revImage1"
        android:layout_width="46dp"
        android:layout_height="53dp"
        android:layout_marginTop="64dp"
        android:contentDescription="@string/ReviewSite1Image"
        app:layout_constraintEnd_toEndOf="@id/titleText"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/cover"
        app:layout_constraintTop_toBottomOf="@id/cover"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/goodreadsRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Rating1"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@id/revImage1"
        app:layout_constraintStart_toEndOf="@id/revImage1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.029" />

    <TextView
        android:id="@+id/goodReadsReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Review1"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/revImage1"
        app:layout_constraintStart_toStartOf="@id/revImage1"
        app:layout_constraintEnd_toEndOf="parent" />


    <ImageView
        android:id="@+id/revImage2"
        android:layout_width="46dp"
        android:layout_height="53dp"
        android:layout_marginTop="48dp"
        android:contentDescription="@string/ReviewSite2Image"
        app:layout_constraintEnd_toEndOf="@id/titleText"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/cover"
        app:layout_constraintTop_toBottomOf="@id/goodReadsReview"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textview_eigth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Rating2"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@id/revImage2"
        app:layout_constraintStart_toEndOf="@id/revImage2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.029" />

    <TextView
        android:id="@+id/textview_ninth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Review1"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/revImage2"
        app:layout_constraintStart_toStartOf="@id/revImage2"
        app:layout_constraintEnd_toEndOf="parent" />


    <ImageView
        android:id="@+id/revImage3"
        android:layout_width="46dp"
        android:layout_height="53dp"
        android:layout_marginTop="48dp"
        android:contentDescription="@string/ReviewSite3Image"
        app:layout_constraintEnd_toEndOf="@id/titleText"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/cover"
        app:layout_constraintTop_toBottomOf="@id/textview_ninth"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textview_tenth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Rating3"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@id/revImage3"
        app:layout_constraintStart_toEndOf="@id/revImage3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.029" />

    <TextView
        android:id="@+id/textview_eleventh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Review1"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/revImage3"
        app:layout_constraintStart_toStartOf="@id/revImage3"
        app:layout_constraintEnd_toEndOf="parent" />


    <ImageView
        android:id="@+id/revImage4"
        android:layout_width="46dp"
        android:layout_height="53dp"
        android:layout_marginTop="48dp"
        android:contentDescription="@string/ReviewSite4Image"
        app:layout_constraintEnd_toEndOf="@id/titleText"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/cover"
        app:layout_constraintTop_toBottomOf="@id/textview_eleventh"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textview_twelve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Rating4"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@id/revImage4"
        app:layout_constraintStart_toEndOf="@id/revImage4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.029" />

    <TextView
        android:id="@+id/textview_thirtheen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Review1"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/revImage4"
        app:layout_constraintStart_toStartOf="@id/revImage4"
        app:layout_constraintEnd_toEndOf="parent" />


